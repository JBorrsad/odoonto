{
  "name": "odoonto-backend",
  "version": "2.0.0",
  "description": "Odoonto backend microservices",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "src/microservices/*",
    "src/libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:user": "cd src/microservices/user && npm start",
    "start:user:detached": "cd src/microservices/user && npm run start:detached",
    "start:wallet": "cd src/microservices/wallet && npm start",
    "stop:user": "cd src/microservices/user && npm stop",
    "stop:wallet": "cd src/microservices/wallet && npm stop",
    "logs:user": "cd src/microservices/user && npm run logs",
    "logs:wallet": "cd src/microservices/wallet && npm run logs",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "docker:env": "docker-compose --file docker/docker-compose.yml up --build",
    "migration:create": "ts-node database/migrate create --name",
    "migration:up": "ts-node database/migrate up",
    "migration:up:tests": "NODE_ENV=test ts-node database/migrate up",
    "migration:down": "ts-node database/migrate down",
    "migration:down:tests": "NODE_ENV=test ts-node database/migrate down",
    "migration:executed": "ts-node database/migrate executed",
    "migration:executed:tests": "NODE_ENV=test ts-node database/migrate executed",
    "migration:pending": "ts-node database/migrate pending",
    "migration:pending:tests": "NODE_ENV=test ts-node database/migrate pending",
    "seed:up": "ts-node database/seed",
    "depcruise": "depcruise",
    "deps:validate": "depcruise src --config .dependency-cruiser.js --output-type err-long",
    "deps:graph": "depcruise src --include-only \"^src\" --config --output-type dot | dot -T svg > assets/dependency-graph.svg"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.1.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/microservices": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/terminus": "^10.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@slonik/migrator": "^0.11.3",
    "amqp-connection-manager": "^4.1.0",
    "amqplib": "^0.10.0",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.2",
    "env-var": "^7.3.0",
    "graphql": "^16.6.0",
    "nanoid": "^3.3.4",
    "nestjs-console": "^8.0.0",
    "nestjs-request-context": "^2.1.0",
    "nestjs-slonik": "^9.0.0",
    "oxide.ts": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.8.0",
    "slonik": "^30.4.4",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^16.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dependency-cruiser": "^12.10.0",
    "eslint": "^8.0.1",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "volta": {
    "node": "20.1.0"
  }
}
