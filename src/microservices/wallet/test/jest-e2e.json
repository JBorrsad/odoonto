{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapping": {
    "^@shared/(.*)$": "<rootDir>/../../libs/shared/$1",
    "^@config/(.*)$": "<rootDir>/../../libs/config/$1"
  }
}
