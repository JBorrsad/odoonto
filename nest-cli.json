{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "src",
  "projects": {
    "user": {
      "type": "application",
      "root": "src/microservices/user",
      "sourceRoot": "src/microservices/user/src"
    },
    "wallet": {
      "type": "application",
      "root": "src/microservices/wallet",
      "sourceRoot": "src/microservices/wallet/src"
    },
    "shared": {
      "type": "library",
      "root": "src/libs/shared",
      "sourceRoot": "src/libs/shared"
    }
  }
}
